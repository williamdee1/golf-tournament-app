# Example Environment Variables
# Copy this file to .env and fill in your actual values

# Frontend (Expo)
EXPO_PUBLIC_API_URL=https://your-railway-deployment-url.up.railway.app

# Backend
PORT=3001
NODE_ENV=development

# Golf Course API (get key from golfcourseapi.com)
GOLF_COURSE_API_KEY=your_api_key_here
GOLF_COURSE_API_URL=https://api.golfcourseapi.com/v1

# Puppeteer settings
PUPPETEER_HEADLESS=true

# Scraping settings
SCRAPING_TIMEOUT=30000
SEARCH_LIMIT=5

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=Golf Tournament App <noreply@yourdomain.com>
APP_URL=https://your-netlify-url.netlify.app